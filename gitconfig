[core]
    editor = nvim

[difftool]
    prompt = false

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
    tool = nvimdiff

[mergetool]
    prompt = false

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[user]
    name = Damien Pretet
    email = damien.pretet@me.com

[color]
    ui = true

[alias]
    ck = checkout
    co = !bash "git-commit.sh"
    ps = push origin
    pl = pull origin
    cl = clean -fd
    st = status
    br = branch
    root = rev-parse --show-toplevel
[mergetool]
    path = nvim
[commit]
	verbose = true
